" keep 1000 items in history
set history=1000

" show cursor position
set ruler

" tabstop length
set tabstop=4

" show incomplete commands
set showcmd

" show a menu when using tab completion 
set wildmenu

" keep offset when hitting z
set scrolloff=5

set hlsearch
set incsearch
set ignorecase
set smartcase

set hidden

" turn on line numbering
set number

" set easier to read line wrap
set lbr

" enable auto and smart indendation
set ai
set si

" set background color
"set bg=light
set bg=dark

" map KEY KEYSTROKES
"map <F2> i//christof<CR>Christof Weigl<CR><Esc>
"map <F3> i<ul><CR><Space><Space><li></li><CR><Esc>0i</ul><Esc>kcit
"map <F4> <Esc>o<li></li><Esc>cit

